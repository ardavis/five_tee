$('#show-title').html('<%=j @task.title %>');
$('#desc').html('<%=j "Description: #{@task.desc}" %>');
$('#due-date').html('<%=j "Due date: #{@task.due_date.to_s}" %>');
$('#created-at').html('<%=j "Created at: #{@task.created_at}" %>');
$('#completed-at').html('<%=j "Completed at: #{@task.completed_at}" %>');
$('#duration').html('<%=j "Duration: #{distance_of_time_in_words_to_now(@task.duration.to_i.seconds.ago)}" %>');
$('#edit-button').html('<%=j link_to 'Edit', {:controller => "tasks", :action => "edit", :format => :js, :remote => true, :task => @task}, class: 'btn btn-primary' %>');
$('#delete-button').html('<%=j = link_to 'Delete', "/tasks/#{@task.id}", class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>');
$('#showModal').modal('toggle');